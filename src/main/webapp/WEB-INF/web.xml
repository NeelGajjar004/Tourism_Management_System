    <error-page>
        <error-code>403</error-code>
        <location>/Homepage/403forbidden.jsf</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/Homepage/404pagenotfound.jsf</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>  
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Homepage/index.jsf</welcome-file>
    </welcome-file-list>
